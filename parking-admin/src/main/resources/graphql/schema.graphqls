type Query {
    getVehicles(page: Int size: Int keyword: String sortField: String sortBy: Int): VehicleList!
    getVehicle(id: String): Vehicle
    getVehiclesByUser(page: Int size: Int, id: String!): VehicleList!
    getUserByVehicle(id: String!): User

    getVehicleBrands(page: Int size: Int keyword: String sortField: String sortBy: Int): VehicleBrandList!
    getVehicleBrand(id: String): VehicleBrand

    getVehicleModels(page: Int size: Int keyword: String sortField: String sortBy: Int): VehicleModelList!
    getVehicleModel(id: String): VehicleModel
    getVehicleModelsByBrand(page: Int size: Int, brandUuid: String!): VehicleModelList!

    getJeepneys(page: Int size: Int keyword: String sortField: String sortBy: Int): JeepneyList!
    getJeepney(id: String): Jeepney
    getJeepneysByRoute(page: Int size: Int, id: String!): JeepneyList!

    getRoutes(page: Int size: Int keyword: String sortField: String sortBy: Int): RouteList!
    getRoute(id: String): Route
    getRouteNodesAndEdges(id: String): RouteNodesAndEdges

    getRouteNodes(page: Int size: Int): RouteNodeList!
    getRouteNode(id: Int): RouteNode

    getRouteEdges(page: Int size: Int): RouteEdgeList!
    getRouteEdge(id: Int): RouteEdge

    getParkingLots(page: Int size: Int verified: Int keyword: String sortField: String sortBy: Int): ParkingLotList!
    getParkingLot(id: String!): ParkingLot
    getParkingLotByUser(id: String!): ParkingLot
    getUserByParkingLot(id: String!): User
    getParkingLotImageKeysByParkingLot(page: Int size: Int id: String!): [String]

    getInvoices(page: Int size: Int keyword: String sortField: String sortBy: Int): InvoiceList!
    getInvoice(id: String!): Invoice
    getInvoicesByVehicle(page: Int size: Int, id: String!): InvoiceList!
    getInvoicesByParkingLot(page: Int size: Int, id: String!): InvoiceList!
    getInvoicesByUser(page: Int size: Int, id: String!): InvoiceList!

    getReports(page: Int size: Int): ReportList!
    getReportById(id: Int!): Report
    getReportStatuses(page: Int size: Int id: Int!): ReportStatusList!

    getDashboardPieGraph: DashboardPieGraph
}


type Query {
    getUserById(id: String!): User
    getUserByPhone(phone: String!): User
    getUserByUsername(username: String!): User
    getUsers(page: Int size: Int): UserList!

    getUserLoginLogs(page: Int size: Int): UserLoginLogList!

    getUserLogoutLogs(page: Int size: Int): UserLogoutLogList!

    getVehicles(page: Int size: Int): VehicleList!

    getParkingLots(page: Int size: Int): ParkingLotList!

    getInvoices(page: Int size: Int): InvoiceList!
    getInvoiceById(id: String!): Invoice
}

type Mutation {
    updateUser(
        id: String!
        phone: String
        username: String
        firstName: String
        lastName: String
        email: String
    ): User
}

# User Related
type User {
    userId: String
    # Notification ID should be retrieved in a private manner
    # notificationId: String
    username: String
    email: String
    phone: String
    authorities: [Authorities]
    firstName: String
    lastName: String
    createdAt: String
    updatedAt: String
    phoneVerifiedAt: String
    emailVerifiedAt: String
}

type UserList {
    content: [User]!
    pageInfo: PageInfo!
}

# User Login Log Related
type UserLoginLog {
    id: String
    user: User
    email: String
    phone: String
    type: Int
    ipAddress: String
    success: Boolean
    createdAt: String
}

type UserLoginLogList {
    content: [UserLoginLog]!
    pageInfo: PageInfo!
}

# User Logout Log Related
type UserLogoutLog {
    id: String
    user: User
    email: String
    phone: String
    type: Int
    ipAddress: String
    createdAt: String
}

type UserLogoutLogList {
    content: [UserLogoutLog]!
    pageInfo: PageInfo!
}

# Role Related
type Authorities {
    authority: String!
}

# Vehicle
type Vehicle {
    id: String!
    owner: User
    name: String
    plateNumber: String
    type: Int
    createdAt: String
    updatedAt: String
}

type VehicleList {
    content: [Vehicle]!
    pageInfo: PageInfo!
}

# Parking Lot
type ParkingLot {
    id: String!
    address: String
    availableSlots: Int
    businessHoursEnd: String
    businessHoursStart: String
    capacity: Int
    createdAt: String
    description: String
    latitude: Float
    longitude: Float
    name: String
    #    createdAt: String
    updatedAt: String
    verifiedAt: String
    owner: User
    rate: Rate
    verifiedBy: User
}

type ParkingLotList {
    content: [ParkingLot]!
    pageInfo: PageInfo!
}

# Rate Related
type Rate {
    id: String!
    freeHours: Int
    interval: Int
    payForFreeHoursWhenExceeding: Boolean
    rate: Float
    startingRate: Float
    type: Int
    createdAt: String
    updatedAt: String
}

# Invoice Related
type Invoice {
    id: String!
    createdAt: String
    endAt: String
    estimatedParkingDurationInHours: Int
    paidAt: String
    plateNumber: String
    startAt: String
    total: Float
    updatedAt: String
    parkingLot: ParkingLot
    vehicle: Vehicle
}

type InvoiceList {
    content: [Invoice]!
    pageInfo: PageInfo!
}

# Misc
type PageInfo {
    size: Int
    totalElements: Int
    first: Boolean
    last: Boolean
    empty: Boolean
}
